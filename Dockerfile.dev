FROM node:22-slim

WORKDIR /app

# Install build tools for native modules (better-sqlite3)
RUN apt-get update && apt-get install -y python3 make g++ ffmpeg curl bzip2 && rm -rf /var/lib/apt/lists/*

COPY package.json package-lock.json* ./
RUN npm ci --legacy-peer-deps

COPY tsconfig.json ./
COPY src/ src/
COPY bin/ bin/

RUN mkdir -p /data && chown node:node /data
ENV ZARUKA_DATA_DIR=/data
ENV XDG_CACHE_HOME=/data/cache

# Entrypoint runs as root to fix volume permissions, then drops to node
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]
# tsx watch for hot-reload
CMD ["npx", "tsx", "watch", "src/cli/index.ts", "start"]
